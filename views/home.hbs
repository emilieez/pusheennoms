<body>
<!-- TOP border -->
	<div id="banner" >
		<img id="logo" src="pusheats.png" onload="setCurrentResults({{resultRecipes}})"> 
		<p id="title" class="texts" ><span><u>PUSHEEN EATS</u></span></p>
	</div>
	
<!-- ctrl panel -->
	<div id="ctrlpanel" >
		<div id="cp-banner">
			<p id="ur-ingredients" class="texts"> YOUR INGREDIENTS </p>
		</div>
		<img id="ingredients-img" src="ingredients.gif">
		<div class="texts"> Select the health options you prefer and type in what you have, then press Submit.</div>
		<div class="food-divs" id="search-ingredients-div">
				<div class="food-divs" id="cat-ingredients-div">
					<!-- buncha ingredients dropdown -->
					<div id='health-diet'>
						<button class="collapsible"> HEALTH </button>
						<div class="content">
							<form id='ingredient-form'>
								<label class="container">No Dairy
								<input type="checkbox" name="health" value='dairy-free'>
									<span class="checkmark"></span>
								</label>

								<label class="container">No Peanuts
								<input type="checkbox" name="health" value='peanut-free'>
									<span class="checkmark"></span>
								</label>

								<label class="container">No Soy
								<input type="checkbox" name="health" value='soy-free'>
									<span class="checkmark"></span>
								</label>

								<label class="container">No Pork
								<input type="checkbox" name="health" value='dairy-free'>
									<span class="checkmark"></span>
								</label>
							</form>
						</div>
							<button class="collapsible"> DIET </button>
						<!-- <div id="enter-stuff"> -->
						<div class="content">
							<form id='ingredient-form1'>
								<label class="container">Balanced
								<input type="checkbox" name="diet" value='balanced'>
									<span class="checkmark"></span>
								</label>

								<label class="container">High Fiber
								<input type="checkbox" name="diet" value='high-fiber'>
									<span class="checkmark"></span>
								</label>

								<label class="container" name="diet" value='high-protein'>High Protein
								<input type="checkbox" name="diet" value='high-protein'>
									<span class="checkmark"></span>
								</label>

								<label class="container">Low Fat
								<input type="checkbox"  name="diet" value='low-fat'>
									<span class="checkmark"></span>
								</label>

								<label class="container">Low Sodium
								<input type="checkbox" name="diet" value='low-sodium'>
									<span class="checkmark"></span>
								</label>
							</form>
						</div>

						<button class="collapsible"> SEARCH </button>
						<div class="content">
							<form action="/search" method="POST" id='ingredient-form2'>
								<input type="text" id="ingredient-bar" name="q" placeholder="What do you have?">
							</form>	
							<div id="food-list">
							<b id="searchHist" style="display: none;"> Search History </b>
							</div>
						</div>
						<button id="submitbutt" onclick="submitForms()"> Submit </button>
					</div>
				</div>	
		</div>
		
	</div>

<!-- THE ACTUAL PAGE -->
	<div id="big-page-div">
		<img id="bg-img" src="bg.jpg">
		<div id="search-results">
		</div>
		<div id="welcome-div">
			<p id="welcome-msg"> Welcome! <br><br>Add your ingredients and we will find matching recipes from the most popular cooking websites! <br><br>
			To get started, type your ingredients from the control panel on the left.
			</p>
		</div>
	</div>

	<script src="js.js"></script>

	<script type="text/javascript">
		showSearchHistory();

		function submitForms() {
			var healthFormElements = document.getElementById('ingredient-form').elements;
			var dietFormElements = document.getElementById('ingredient-form1').elements;

			for (var i = 0; i < healthFormElements.length; i++) {
				if (healthFormElements[i].checked) {
					addToSearchParam('health', healthFormElements[i].value)
				}
			}

			for (var i = 0; i < dietFormElements.length; i++) {
				if (dietFormElements[i].checked) {
					addToSearchParam('diet', dietFormElements[i].value)
				}
			}
			document.getElementById('ingredient-form2').submit();
		}

		function addToSearchParam(name, value) {
			var newInput = document.createElement('input');
			newInput.setAttribute('type', 'hidden');
			newInput.setAttribute('name', name);
			newInput.setAttribute('value', value);

			document.getElementById('ingredient-form2').appendChild(newInput);
		}

	</script>

</body>
</html>